{
  "name": "corista-openstack-compute",
  "description": "Configure corista-openstack compute node",
  "json_class": "Chef::Role",
  "default_attributes": {
    "corista-openstack": {
      "interfaces": {
        "eno1": {
          "desc": "mgmt nic",
          "type": "inet manual"
        },
        "eno2": {
          "desc": "vlan nic",
          "type": "inet manual"
        },
        "eno3": {
          "desc": "unused nic",
          "type": "inet manual"
        },
        "br-mgmt": {
          "type": "inet static",
          "options": [
            "address 192.168.200.30",
            "netmask 255.255.255.0",
            "gateway 192.168.200.1",
            "dns-nameservers 192.168.200.1",
            "bridge_ports eno1",
            "bridge_stp off",
            "bridge_fd 0",
            "bridge_maxwait 0"
          ]
        },
        "br-vlan": {
          "type": "inet manual",
          "options": [
            "bridge_ports eno2",
            "bridge_stp off",
            "bridge_fd 0",
            "bridge_maxwait 0"
          ]
        }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[build-essential]",
    "recipe[corista-openstack::corista_user]",
    "recipe[corista-openstack::setup_interfaces]",
    "recipe[openstack-common]",
    "recipe[openstack-network]",
    "recipe[openstack-network::ml2_core_plugin]",
    "recipe[openstack-network::ml2_linuxbridge]",
    "recipe[openstack-network::plugin_config]"
  ],
  "env_run_lists": {
  }
}
